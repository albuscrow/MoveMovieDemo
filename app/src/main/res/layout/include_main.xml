<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ff88ff88"
                android:layout_height="50dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Income (RMB)"
                    android:id="@+id/textView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today: 39234"
                    android:id="@+id/textView2"
                    android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:text="This week: 300223"
                      android:id="@+id/textView3"
                      android:layout_alignTop="@+id/textView2" android:layout_centerHorizontal="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="This month: 1193475"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/textView4"
                      android:layout_alignTop="@+id/textView3" android:layout_alignParentEnd="true"/>
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Show Detail"
                    android:onClick="notImplement"
                    android:id="@+id/button"
                    android:layout_alignParentEnd="true" android:layout_above="@+id/textView4"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent" android:background="#ffff8888"
                        android:layout_height="50dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Expenses (RMB)"
                      android:id="@+id/textView5"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Today: 39234" android:id="@+id/textView6"
                      android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp" android:text="This week: 200223" android:id="@+id/textView7"
                      android:layout_alignTop="@+id/textView6" android:layout_centerHorizontal="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="This month: 793475" android:layout_marginLeft="5dp" android:id="@+id/textView8"
                      android:layout_alignTop="@+id/textView7" android:layout_alignParentEnd="true"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:background="@null" android:text="Show Detail"
                    android:onClick="notImplement" android:id="@+id/button3"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                    android:layout_above="@+id/textView8"/>
        </RelativeLayout>
        <RelativeLayout android:layout_marginTop="20dp" android:layout_width="match_parent"
                        android:background="#ff8888ff" android:layout_height="50dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Next 7 Days Ticket sales"
                      android:id="@+id/textView9"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content" android:layout_below="@+id/textView9"
                    android:id="@+id/linearLayout">
                <TextView
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="80%"/>

                <TextView
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="72%"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="66%"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="54%"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="23%"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="8%"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="12%"/>
            </LinearLayout>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@null" android:text="Show Detail"
                    android:onClick="notImplement"
                    android:id="@+id/button2" android:layout_above="@+id/linearLayout"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <GridLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:columnCount="2" android:rowCount="3">
            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Staff manage"
                    android:layout_row="0" android:layout_column="0"
                    android:id="@+id/button4"/>
            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Financial Manage"
                    android:id="@+id/button6" android:layout_row="0" android:layout_column="1"/>

            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Audience Manage"
                    android:id="@+id/button7" android:layout_row="1" android:layout_column="0"/>

            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Device Manage"
                    android:id="@+id/button8" android:layout_row="1" android:layout_column="1"/>

            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Sales Manage"
                    android:id="@+id/button9" android:layout_row="2" android:layout_column="0"/>

            <Button
                    android:onClick="notImplement"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:text="Movie Manage"
                    android:id="@+id/button10" android:layout_row="2" android:layout_column="1"/>
        </GridLayout>
    </LinearLayout>


</ScrollView>
